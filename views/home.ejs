<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Thai+Looped:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <title>Contact List</title>
  </head>
  <body>
    <div class="main_body">
      <h1> <i class="far fa-address-book"></i> Contacts</h1>

      <div>
        <form action="" class="search_form">
          <input class="search_field" type="text" placeholder="Search" />
          <button class="btn-search">Search <i class="fas fa-search"></i></button>
        </form>
      </div>
      <div id="btn_add">
      <a href="/add">
        <button class="btn_add">Add contact <i class="fas fa-user-plus"></i></button>
      </a>
      </div>
      <% contacts.forEach(contact=>{ %>
      <div class="contact" id="<%=contact.phone%>">
        <div class="contact_name"><i class="far fa-address-card"></i> <%= contact.name %></div>
        <div class="contact_email"><%= contact.email %></div>
        <div class="contac_pnone"><%= contact.phone %></div>

        <a href="/edit/?id=<%=contact.id %>">
          <button class="btn_edit">Edit <i class="fas fa-user-edit"></i></button></a
        >
        <a href="/delete/?id=<%=contact.id %>">
          <button class="btn_delete">Delete <i class="fas fa-trash"></i></button></a
        >
      </div>
      <% }) %>
    </div>
  </body>
</html>
